
{% extends 'base.html.twig' %}

{% block title %}List of ingrediants{% endblock %}

{% block body %}

{% if ingrediant %}
<h1> List of ingrediants</h1>
<table id="ingrediant" class="table table-striped"> 
<thead>
<tr>
<th>#</th>
<th>Name</th>
<th>Price</th>
<th>Actions</th>
</tr>
</thead>
<tbody> 

{% for ingrediant in ingrediant %}
<tr> 
<td> {{ ingrediant.id }} </td>
<td> {{ ingrediant.name }} </td>
<td> {{ ingrediant.price}} </td>
<td> 
<a href="/ingrediant/{{ ingrediant.id }}" class="btn fa fa-eye"></a>
<a href="/ingrediant/update/{{ ingrediant.id }}" class="btn fa fa-refresh"></a>
<a href="#" class="btn fa fa-trash delete-ingrediant" data-id="{{ ingrediant.id }}"></a>  
<a href="/ingrediant/add" class="btn fa fa-plus"></a>

</td>
</tr>
 {% endfor %}
</tbody>
</table>
{% else  %}
<p> The list of ingrediants is empty</p>

{% endif %}

{% endblock %}

{% block javascripts %}
<script src="/js/main.js">  </script>

{% endblock %}

